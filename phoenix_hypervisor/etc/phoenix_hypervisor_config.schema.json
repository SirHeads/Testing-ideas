{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phoenix Hypervisor System Configuration",
    "description": "Schema for validating the core system-wide configuration for the Phoenix Hypervisor scripts.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri-reference",
            "description": "URI of the JSON Schema used to validate this document."
        },
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$",
            "description": "Version of the Phoenix Hypervisor configuration."
        },
        "author": {
            "type": "string",
            "minProperties": 1,
            "description": "Author(s) of the configuration."
        },
        "core_paths": {
            "type": "object",
            "description": "Essential file paths used by the hypervisor scripts.",
            "properties": {
                "lxc_config_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the main LXC configuration JSON file."
                },
                "lxc_config_schema_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the JSON schema for validating the LXC configuration."
                },
                "hf_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Hugging Face token file."
                },
                "docker_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Docker Hub token file."
                },
                "docker_images_path": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the shared directory containing Docker images/contexts."
                },
                "hypervisor_marker_dir": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Directory for Phoenix Hypervisor marker files."
                },
                "hypervisor_marker": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Full path to the main hypervisor initialization marker file."
                }
            },
            "required": [
                "lxc_config_file",
                "lxc_config_schema_file",
                "hf_token_file",
                "docker_token_file",
                "docker_images_path",
                "hypervisor_marker_dir",
                "hypervisor_marker"
            ],
            "additionalProperties": false
        },
        "network": {
            "type": "object",
            "description": "Network-related configuration settings.",
            "properties": {
                "external_registry_url": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL for the external Docker registry (e.g., Docker Hub)."
                },
                "portainer_server_ip": {
                    "type": "string",
                    "format": "ipv4",
                    "description": "IP address of the Portainer Server container."
                },
                "portainer_server_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for accessing the Portainer web UI."
                },
                "portainer_agent_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for Portainer Agent communication."
                }
            },
            "required": [
                "external_registry_url",
                "portainer_server_ip",
                "portainer_server_port",
                "portainer_agent_port"
            ],
            "additionalProperties": false
        },
        "proxmox_defaults": {
            "type": "object",
            "description": "Default settings for Proxmox LXC creation, overridable by individual LXC configs.",
            "properties": {
                "zfs_lxc_pool": {
                    "type": "string",
                    "minLength": 1,
                    "description": "ZFS pool for LXC container storage."
                },
                "lxc": {
                    "type": "object",
                    "properties": {
                        "cores": {
                            "type": "integer",
                            "minimum": 1,
                            "description": "Default CPU cores for LXC containers."
                        },
                        "memory_mb": {
                            "type": "integer",
                            "minimum": 512,
                            "description": "Default memory (RAM) in MB for LXC containers."
                        },
                        "network_config": {
                            "type": "string",
                            "minLength": 1,
                            "description": "Default network configuration string for 'pct' commands."
                        },
                        "features": {
                            "type": "string",
                            "pattern": "^[a-z]+=([0-1])(,[a-z]+=([0-1]))*$",
                            "description": "Default LXC features (e.g., 'nesting=1,keyctl=1')."
                        },
                        "security": {
                            "type": "string",
                            "enum": [
                                "default",
                                "unconfined"
                            ],
                            "description": "Default container security profile."
                        },
                        "nesting": {
                            "type": "integer",
                            "enum": [
                                0,
                                1
                            ],
                            "description": "Default value for container nesting (1 for enabled)."
                        }
                    },
                    "required": [
                        "cores",
                        "memory_mb",
                        "network_config",
                        "features",
                        "security",
                        "nesting"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "zfs_lxc_pool",
                "lxc"
            ],
            "additionalProperties": false
        },
        "behavior": {
            "type": "object",
            "description": "Runtime behavior flags for the scripts.",
            "properties": {
                "rollback_on_failure": {
                    "type": "boolean",
                    "description": "If true, scripts attempt to rollback failed LXC creations."
                },
                "debug_mode": {
                    "type": "boolean",
                    "description": "If true, skips validation and logs detailed output for troubleshooting."
                }
            },
            "required": [
                "rollback_on_failure",
                "debug_mode"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "$schema",
        "version",
        "author",
        "core_paths",
        "network",
        "proxmox_defaults",
        "behavior"
    ],
    "additionalProperties": false
}
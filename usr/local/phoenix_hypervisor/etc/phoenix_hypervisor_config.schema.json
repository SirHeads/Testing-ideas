{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phoenix Hypervisor System Configuration",
    "description": "Schema for validating the core system-wide configuration for the Phoenix Hypervisor scripts.",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$",
            "description": "Version of the Phoenix Hypervisor configuration."
        },
        "author": {
            "type": "string",
            "description": "Author(s) of the configuration."
        },
        "timezone": {
            "type": "string",
            "minLength": 1,
            "description": "The timezone for the hypervisor and containers."
        },
        "users": {
            "type": "object",
            "description": "Admin user configuration.",
            "properties": {
                "username": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The username for the admin user."
                },
                "password_hash": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The hashed password for the user."
                },
                "sudo_access": {
                    "type": "boolean",
                    "description": "Whether the user should have sudo access."
                },
                "ssh_public_key": {
                    "type": "string",
                    "description": "The SSH public key for the user."
                }
            },
            "required": [
                "username",
                "password_hash",
                "sudo_access"
            ]
        },
        "core_paths": {
            "type": "object",
            "description": "Essential file paths used by the hypervisor scripts.",
            "properties": {
                "lxc_config_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the main LXC configuration JSON file."
                },
                "lxc_config_schema_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the JSON schema for validating the LXC configuration."
                },
                "vm_config_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the main VM configuration JSON file."
                },
                "hf_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Hugging Face token file."
                },
                "docker_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Docker Hub token file."
                },
                "docker_images_path": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the shared directory containing Docker images/contexts."
                },
                "hypervisor_marker_dir": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Directory for Phoenix Hypervisor marker files."
                },
                "hypervisor_marker": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Full path to the main hypervisor initialization marker file."
                }
            },
            "required": [
                "lxc_config_file",
                "lxc_config_schema_file",
                "vm_config_file",
                "hf_token_file",
                "docker_token_file",
                "docker_images_path",
                "hypervisor_marker_dir",
                "hypervisor_marker"
            ]
        },
        "network": {
            "type": "object",
            "description": "Network-related configuration settings.",
            "properties": {
                "external_registry_url": {
                    "type": "string",
                    "description": "URL for the external Docker registry (e.g., Docker Hub)."
                },
                "portainer_server_ip": {
                    "type": "string",
                    "description": "IP address of the Portainer Server container."
                },
                "portainer_server_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for accessing the Portainer web UI."
                },
                "portainer_agent_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for Portainer Agent communication."
                },
                "interfaces": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        },
                        "gateway": {
                            "type": "string"
                        },
                        "dns_nameservers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "name",
                        "address",
                        "gateway",
                        "dns_nameservers"
                    ]
                },
                "default_subnet": {
                    "type": "string"
                },
                "nfs_server": {
                    "type": "string"
                },
                "fallback_dns": {
                    "type": "string"
                }
            },
            "required": [
                "external_registry_url",
                "portainer_server_ip",
                "portainer_server_port",
                "portainer_agent_port",
                "interfaces",
                "default_subnet",
                "nfs_server",
                "fallback_dns"
            ]
        },
        "docker": {
            "type": "object",
            "description": "Docker-related image configurations.",
            "properties": {
                "portainer_server_image": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The Docker image for the Portainer Server."
                },
                "portainer_agent_image": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The Docker image for the Portainer Agent."
                }
            },
            "required": [
                "portainer_server_image",
                "portainer_agent_image"
            ]
        },
        "nfs": {
            "type": "object",
            "description": "NFS configuration for exports.",
            "properties": {
                "exports": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "clients": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "options": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "path",
                            "clients",
                            "options"
                        ]
                    }
                }
            },
            "required": [
                "exports"
            ]
        },
        "samba": {
            "type": "object",
            "description": "Samba configuration for shares.",
            "properties": {
                "user": {
                    "type": "string"
                },
                "shares": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "options": {
                                "type": "string"
                            },
                            "valid_users": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "name",
                            "path",
                            "options",
                            "valid_users"
                        ]
                    }
                }
            },
            "required": [
                "user",
                "shares"
            ]
        },
        "zfs": {
            "type": "object",
            "properties": {
                "arc_max_gb": {
                    "type": "integer"
                },
                "pools": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "raid_level": {
                                "type": "string"
                            },
                            "disks": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "name",
                            "raid_level",
                            "disks"
                        ]
                    }
                },
                "datasets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "pool": {
                                "type": "string"
                            },
                            "properties": {
                                "type": "string"
                            },
                            "proxmox_storage_type": {
                                "type": "string"
                            },
                            "proxmox_content_type": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "pool",
                            "properties",
                            "proxmox_storage_type",
                            "proxmox_content_type"
                        ]
                    }
                }
            },
            "required": [
                "arc_max_gb",
                "pools",
                "datasets"
            ]
        },
        "proxmox_storage_ids": {
            "type": "object",
            "properties": {
                "quickos_vm": {
                    "type": "string"
                },
                "quickos_lxc": {
                    "type": "string"
                },
                "fastData_shared_backups": {
                    "type": "string"
                },
                "fastdata_iso": {
                    "type": "string"
                },
                "quickos_lxc_persistent_data": {
                    "type": "string"
                }
            },
            "required": [
                "quickos_vm",
                "quickos_lxc",
                "fastData_shared_backups",
                "fastdata_iso",
                "quickos_lxc_persistent_data"
            ]
        },
        "mount_point_base": {
            "type": "string"
        },
        "proxmox_defaults": {
            "type": "object",
            "description": "Default settings for Proxmox LXC creation, overridable by individual LXC configs.",
            "properties": {
                "zfs_lxc_pool": {
                    "type": "string",
                    "minLength": 1,
                    "description": "ZFS pool for LXC container storage."
                },
                "lxc": {
                    "type": "object",
                    "properties": {
                        "cores": {
                            "type": "integer",
                            "minimum": 1,
                            "description": "Default CPU cores for LXC containers."
                        },
                        "memory_mb": {
                            "type": "integer",
                            "minimum": 512,
                            "description": "Default memory (RAM) in MB for LXC containers."
                        },
                        "network_config": {
                            "type": "string",
                            "minLength": 1,
                            "description": "Default network configuration string for 'pct' commands."
                        },
                        "features": {
                            "type": "string",
                            "pattern": "^[a-z]+=([0-1])(,[a-z]+=([0-1]))*$",
                            "description": "Default LXC features (e.g., 'nesting=1,keyctl=1')."
                        },
                        "security": {
                            "type": "string",
                            "enum": [
                                "default",
                                "unconfined"
                            ],
                            "description": "Default container security profile."
                        },
                        "nesting": {
                            "type": "integer",
                            "enum": [
                                0,
                                1
                            ],
                            "description": "Default value for container nesting (1 for enabled)."
                        }
                    },
                    "required": [
                        "cores",
                        "memory_mb",
                        "network_config",
                        "features",
                        "security",
                        "nesting"
                    ]
                }
            },
            "required": [
                "zfs_lxc_pool",
                "lxc"
            ]
        },
        "tests": {
            "type": "object",
            "properties": {
                "system_validation": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "type",
                            "path"
                        ]
                    }
                },
                "hypervisor_health_.check": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "type",
                            "path"
                        ]
                    }
                }
            },
            "required": [
                "system_validation",
                "hypervisor_health_.check"
            ]
        },
        "nvidia_driver": {
            "type": "object",
            "properties": {
                "install": {
                    "type": "boolean"
                },
                "version": {
                    "type": "string"
                },
                "runfile_url": {
                    "type": "string"
                },
                "cuda_version": {
                    "type": "string"
                },
                "install_vllm_libs": {
                    "type": "boolean"
                }
            },
            "required": [
                "install",
                "version",
                "runfile_url",
                "cuda_version",
                "install_vllm_libs"
            ]
        },
        "behavior": {
            "type": "object",
            "description": "Runtime behavior flags for the scripts.",
            "properties": {
                "rollback_on_failure": {
                    "type": "boolean",
                    "description": "If true, scripts attempt to rollback failed LXC creations."
                },
                "debug_mode": {
                    "type": "boolean",
                    "description": "If true, skips validation and logs detailed output for troubleshooting."
                }
            },
            "required": [
                "rollback_on_failure",
                "debug_mode"
            ]
        },
        "shared_volumes": {
            "type": "object",
            "properties": {
                "ssl_certs": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "nginx_sites": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "nginx_logs": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "ollama_models": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "llamacpp_models": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "vllm_models": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                },
                "firewall": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "default_input_policy": {
                            "type": "string"
                        },
                        "default_output_policy": {
                            "type": "string"
                        },
                        "global_firewall_rules": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "action": {
                                        "type": "string"
                                    },
                                    "proto": {
                                        "type": "string"
                                    },
                                    "port": {
                                        "type": "string"
                                    },
                                    "comment": {
                                        "type": "string"
                                    },
                                    "dest": {
                                        "type": "string"
                                    },
                                    "source": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "type",
                                    "action",
                                    "proto",
                                    "port",
                                    "comment"
                                ]
                            }
                        }
                    },
                    "required": [
                        "enabled",
                        "default_input_policy",
                        "default_output_policy",
                        "global_firewall_rules"
                    ]
                }
            },
            "required": [
                "ssl_certs",
                "nginx_sites",
                "nginx_logs",
                "ollama_models",
                "llamacpp_models",
                "vllm_models",
                "firewall"
            ]
        },
        "portainer_api": {
            "type": "object",
            "properties": {
                "admin_user": {
                    "type": "string"
                },
                "admin_password": {
                    "type": "string"
                },
                "portainer_hostname": {
                    "type": "string"
                }
            },
            "required": [
                "admin_user",
                "admin_password",
                "portainer_hostname"
            ]
        }
    },
    "required": [
        "version",
        "author",
        "users",
        "core_paths",
        "timezone",
        "network",
        "docker",
        "nfs",
        "samba",
        "zfs",
        "proxmox_storage_ids",
        "mount_point_base",
        "proxmox_defaults",
        "tests",
        "nvidia_driver",
        "behavior",
        "shared_volumes",
        "portainer_api"
    ]
}
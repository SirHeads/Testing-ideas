{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phoenix Hypervisor System Configuration",
    "description": "Schema for validating the core system-wide configuration for the Phoenix Hypervisor scripts.",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$",
            "description": "Version of the Phoenix Hypervisor configuration."
        },
        "author": {
            "type": "string",
            "description": "Author(s) of the configuration."
        },
        "timezone": {
            "type": "string",
            "minLength": 1,
            "description": "The timezone for the hypervisor and containers."
        },
        "users": {
            "type": "object",
            "description": "Admin user configuration.",
            "properties": {
                "username": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The username for the admin user."
                },
                "password_hash": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The hashed password for the user."
                },
                "sudo_access": {
                    "type": "boolean",
                    "description": "Whether the user should have sudo access."
                },
                "ssh_public_key": {
                    "type": "string",
                    "description": "The SSH public key for the user."
                }
            },
            "required": [
                "username",
                "password_hash",
                "sudo_access"
            ]
        },
        "core_paths": {
            "type": "object",
            "description": "Essential file paths used by the hypervisor scripts.",
            "properties": {
                "lxc_config_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the main LXC configuration JSON file."
                },
                "lxc_config_schema_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the JSON schema for validating the LXC configuration."
                },
                "hf_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Hugging Face token file."
                },
                "docker_token_file": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the Docker Hub token file."
                },
                "docker_images_path": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Path to the shared directory containing Docker images/contexts."
                },
                "hypervisor_marker_dir": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Directory for Phoenix Hypervisor marker files."
                },
                "hypervisor_marker": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Full path to the main hypervisor initialization marker file."
                }
            },
            "required": [
                "lxc_config_file",
                "lxc_config_schema_file",
                "hf_token_file",
                "docker_token_file",
                "docker_images_path",
                "hypervisor_marker_dir",
                "hypervisor_marker"
            ],
            "additionalProperties": false
        },
        "network": {
            "type": "object",
            "description": "Network-related configuration settings.",
            "properties": {
                "external_registry_url": {
                    "type": "string",
                    "description": "URL for the external Docker registry (e.g., Docker Hub)."
                },
                "portainer_server_ip": {
                    "type": "string",
                    "description": "IP address of the Portainer Server container."
                },
                "portainer_server_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for accessing the Portainer web UI."
                },
                "portainer_agent_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for Portainer Agent communication."
                },
                "interfaces": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        },
                        "gateway": {
                            "type": "string"
                        },
                        "dns_nameservers": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "address",
                        "gateway",
                        "dns_nameservers"
                    ]
                }
            },
            "properties": {
                "external_registry_url": {
                    "type": "string",
                    "description": "URL for the external Docker registry (e.g., Docker Hub)."
                },
                "portainer_server_ip": {
                    "type": "string",
                    "description": "IP address of the Portainer Server container."
                },
                "portainer_server_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for accessing the Portainer web UI."
                },
                "portainer_agent_port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Port for Portainer Agent communication."
                },
                "interfaces": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        },
                        "gateway": {
                            "type": "string"
                        },
                        "dns_nameservers": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "address",
                        "gateway",
                        "dns_nameservers"
                    ]
                },
                "default_subnet": {
                    "type": "string"
                },
                "nfs_server": {
                    "type": "string"
                }
            },
            "required": [
                "external_registry_url",
                "portainer_server_ip",
                "portainer_server_port",
                "portainer_agent_port",
                "interfaces",
                "default_subnet",
                "nfs_server"
            ],
            "additionalProperties": true
        },
        "docker": {
            "type": "object",
            "description": "Docker-related image configurations.",
            "properties": {
                "portainer_server_image": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The Docker image for the Portainer Server."
                },
                "portainer_agent_image": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The Docker image for the Portainer Agent."
                }
            },
            "required": [
                "portainer_server_image",
                "portainer_agent_image"
            ],
            "additionalProperties": false
        },
        "nfs": {
            "type": "object",
            "description": "NFS configuration for exports.",
            "properties": {
                "exports": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "clients": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "options": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "path",
                            "clients",
                            "options"
                        ]
                    }
                }
            },
            "required": [
                "exports"
            ]
        },
        "samba": {
            "type": "object",
            "description": "Samba configuration for shares.",
            "properties": {
                "user": {
                    "type": "string"
                },
                "shares": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "path": {
                                "type": "string"
                            },
                            "options": {
                                "type": "string"
                            },
                            "valid_users": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "name",
                            "path",
                            "options",
                            "valid_users"
                        ]
                    }
                }
            },
            "required": [
                "user",
                "shares"
            ]
        },
        "proxmox_defaults": {
            "type": "object",
            "description": "Default settings for Proxmox LXC creation, overridable by individual LXC configs.",
            "properties": {
                "zfs_lxc_pool": {
                    "type": "string",
                    "minLength": 1,
                    "description": "ZFS pool for LXC container storage."
                },
                "lxc": {
                    "type": "object",
                    "properties": {
                        "cores": {
                            "type": "integer",
                            "minimum": 1,
                            "description": "Default CPU cores for LXC containers."
                        },
                        "memory_mb": {
                            "type": "integer",
                            "minimum": 512,
                            "description": "Default memory (RAM) in MB for LXC containers."
                        },
                        "network_config": {
                            "type": "string",
                            "minLength": 1,
                            "description": "Default network configuration string for 'pct' commands."
                        },
                        "features": {
                            "type": "string",
                            "pattern": "^[a-z]+=([0-1])(,[a-z]+=([0-1]))*$",
                            "description": "Default LXC features (e.g., 'nesting=1,keyctl=1')."
                        },
                        "security": {
                            "type": "string",
                            "enum": [
                                "default",
                                "unconfined"
                            ],
                            "description": "Default container security profile."
                        },
                        "nesting": {
                            "type": "integer",
                            "enum": [
                                0,
                                1
                            ],
                            "description": "Default value for container nesting (1 for enabled)."
                        }
                    },
                    "required": [
                        "cores",
                        "memory_mb",
                        "network_config",
                        "features",
                        "security",
                        "nesting"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "zfs_lxc_pool",
                "lxc"
            ],
            "additionalProperties": false
        },
        "vm_defaults": {
            "type": "object",
            "description": "Default settings for VM creation, overridable by individual VM configs.",
            "properties": {
                "template": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Default VM template to use."
                },
                "cores": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Default CPU cores for VMs."
                },
                "memory_mb": {
                    "type": "integer",
                    "minimum": 512,
                    "description": "Default memory (RAM) in MB for VMs."
                },
                "disk_size_gb": {
                    "type": "integer",
                    "minimum": 10,
                    "description": "Default disk size in GB for VMs."
                },
                "storage_pool": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Default storage pool for VM disks."
                },
                "network_bridge": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Default network bridge for VMs."
                }
            },
            "required": [
                "template",
                "cores",
                "memory_mb",
                "disk_size_gb",
                "storage_pool",
                "network_bridge"
            ],
            "additionalProperties": false
        },
        "vms": {
            "type": "array",
            "description": "Array of VM configurations.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Name of the VM."
                    },
                    "cores": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "CPU cores for the VM."
                    },
                    "memory_mb": {
                        "type": "integer",
                        "minimum": 512,
                        "description": "Memory (RAM) in MB for the VM."
                    },
                    "disk_size_gb": {
                        "type": "integer",
                        "minimum": 10,
                        "description": "Disk size in GB for the VM."
                    },
                    "post_create_scripts": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "description": "List of scripts to execute inside the VM after creation."
                    }
                },
                "required": [
                    "name",
                    "cores",
                    "memory_mb",
                    "disk_size_gb"
                ],
                "additionalProperties": false
            }
        },
        "behavior": {
            "type": "object",
            "description": "Runtime behavior flags for the scripts.",
            "properties": {
                "rollback_on_failure": {
                    "type": "boolean",
                    "description": "If true, scripts attempt to rollback failed LXC creations."
                },
                "debug_mode": {
                    "type": "boolean",
                    "description": "If true, skips validation and logs detailed output for troubleshooting."
                }
            },
            "required": [
                "rollback_on_failure",
                "debug_mode"
            ],
            "additionalProperties": false
        },
        "nvidia_driver": {
            "type": "object",
            "properties": {
                "install": {
                    "type": "boolean"
                },
                "version": {
                    "type": "string"
                },
                "runfile_url": {
                    "type": "string"
                },
                "cuda_version": {
                    "type": "string"
                },
                "install_vllm_libs": {
                    "type": "boolean"
                }
            },
            "required": [
                "install",
                "version",
                "runfile_url",
                "cuda_version",
                "install_vllm_libs"
            ],
            "additionalProperties": false
        },
        "zfs": {
            "type": "object",
            "properties": {
                "arc_max_gb": {
                    "type": "integer"
                },
                "pools": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "raid_level": {
                                "type": "string"
                            },
                            "disks": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "name",
                            "raid_level",
                            "disks"
                        ]
                    }
                },
                "datasets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "pool": {
                                "type": "string"
                            },
                            "properties": {
                                "type": "string"
                            },
                            "proxmox_storage_type": {
                                "type": "string"
                            },
                            "proxmox_content_type": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "pool",
                            "properties",
                            "proxmox_storage_type",
                            "proxmox_content_type"
                        ]
                    }
                }
            },
            "required": [
                "arc_max_gb",
                "pools",
                "datasets"
            ]
        },
        "proxmox_storage_ids": {
            "type": "object",
            "properties": {
                "quickos_vm": {
                    "type": "string"
                },
                "quickos_lxc": {
                    "type": "string"
                },
                "fastdata_backup": {
                    "type": "string"
                },
                "fastdata_iso": {
                    "type": "string"
                }
            },
            "required": [
                "quickos_vm",
                "quickos_lxc",
                "fastdata_backup",
                "fastdata_iso"
            ]
        },
        "mount_point_base": {
            "type": "string"
        },
        "shared_volumes": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                    "type": "object",
                    "properties": {
                        "host_path": {
                            "type": "string",
                            "pattern": "^/(fastData-shared-test-data|fastData-shared-bulk-data|quickOS-shared-prod-data|quickOS-shared-prod-data-sync)/.+"
                        },
                        "mounts": {
                            "type": "object",
                            "patternProperties": {
                                "^[0-9]+$": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "host_path",
                        "mounts"
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "version",
        "author",
        "timezone",
        "users",
        "core_paths",
        "network",
        "docker",
        "nfs",
        "samba",
        "proxmox_defaults",
        "vm_defaults",
        "vms",
        "behavior",
        "nvidia_driver",
        "zfs",
        "proxmox_storage_ids",
        "mount_point_base"
    ],
    "additionalProperties": false
}
{
    "vm_defaults": {
        "template": "ubuntu-24.04-standard",
        "cores": 2,
        "memory_mb": 4096,
        "disk_size_gb": 50,
        "storage_pool": "quickOS-vm-disks",
        "network_bridge": "vmbr0"
    },
    "vms": [
        {
            "vmid": 8000,
            "name": "ubuntu-2404-cloud-template",
            "is_template": true,
            "template_image": "noble-server-cloudimg-amd64.img",
            "template_snapshot_name": "initial_clean_state",
            "network_config": {
                "ip": "dhcp"
            },
            "user_config": {
                "username": "phoenix_user"
            }
        },
        {
            "vmid": 8001,
            "name": "docker-vm-01",
            "clone_from_vmid": 8000,
            "cores": 4,
            "memory_mb": 8192,
            "disk_size_gb": 100,
            "start_at_boot": true,
            "boot_order": 1,
            "boot_delay": 10,
            "features": [
                "base_setup",
                "docker"
            ],
            "snapshots": {
                "pre_features": "snap_before_docker",
                "post_features": "snap_after_docker"
            },
            "network_config": {
                "ip": "10.0.0.101/24",
                "gw": "10.0.0.1"
            },
            "user_config": {
                "username": "phoenix_user"
            },
            "qm_options": [
                "--vga qxl"
            ],
            "volumes": [
                {
                    "type": "nfs",
                    "name": "persistent-storage",
                    "path": "/quickOS/vm-persistent-data/8001",
                    "mount_point": "/persistent-storage",
                    "server": "10.0.0.13"
                }
            ]
        }
    ]
}
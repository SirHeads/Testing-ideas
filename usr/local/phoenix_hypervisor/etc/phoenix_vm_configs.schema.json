{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Phoenix Hypervisor VM Configuration Schema",
    "description": "Schema for defining VM configurations in the Phoenix Hypervisor environment.",
    "type": "object",
    "properties": {
        "vm_defaults": {
            "description": "Default settings for all VMs.",
            "type": "object",
            "properties": {
                "template": {
                    "type": "string"
                },
                "cores": {
                    "type": "integer"
                },
                "memory_mb": {
                    "type": "integer"
                },
                "disk_size_gb": {
                    "type": "integer"
                },
                "storage_pool": {
                    "type": "string"
                },
                "network_bridge": {
                    "type": "string"
                }
            },
            "required": [
                "template",
                "cores",
                "memory_mb",
                "disk_size_gb",
                "storage_pool",
                "network_bridge"
            ]
        },
        "vms": {
            "description": "An array of VM definitions.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "vmid": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "is_template": {
                        "type": "boolean"
                    },
                    "clone_from_vmid": {
                        "type": "integer"
                    },
                    "template_image": {
                        "type": "string"
                    },
                    "cores": {
                        "type": "integer"
                    },
                    "memory_mb": {
                        "type": "integer"
                    },
                    "disk_size_gb": {
                        "type": "integer"
                    },
                    "storage_pool": {
                        "type": "string"
                    },
                    "network_bridge": {
                        "type": "string"
                    },
                    "start_at_boot": {
                        "type": "boolean",
                        "description": "Specifies whether the VM should start automatically at boot."
                    },
                    "boot_order": {
                        "type": "integer",
                        "minimum": 0,
                        "description": "The boot order priority for the VM."
                    },
                    "boot_delay": {
                        "type": "integer",
                        "minimum": 0,
                        "description": "The delay in seconds before starting the next VM in the boot order."
                    },
                    "features": {
                        "type": "array",
                        "description": "An array of feature scripts to apply to the VM.",
                        "items": {
                            "type": "string"
                        }
                    },
                    "portainer_role": {
                        "type": "string",
                        "enum": [
                            "primary",
                            "agent",
                            "none"
                        ]
                    },
                    "snapshots": {
                        "type": "object",
                        "description": "Defines lifecycle snapshots to be taken.",
                        "properties": {
                            "pre-features": {
                                "type": "string"
                            },
                            "post-features": {
                                "type": "string"
                            }
                        }
                    },
                    "template_snapshot_name": {
                        "type": "string"
                    },
                    "count": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "The number of VMs to create from this definition."
                    },
                    "qm_options": {
                        "type": "array",
                        "description": "An array of arbitrary 'qm set' options to apply to the VM.",
                        "items": {
                            "type": "string"
                        }
                    },
                    "volumes": {
                        "type": "array",
                        "description": "A list of dedicated volumes to be created and attached to the VM.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "path": {
                                    "type": "string"
                                },
                                "mount_point": {
                                    "type": "string"
                                },
                                "server": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "name",
                                "path",
                                "mount_point",
                                "server"
                            ]
                        }
                    },
                    "docker_stacks": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "environment": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "environment"
                            ]
                        }
                    },
                    "firewall": {
                        "type": "object",
                        "description": "Firewall configuration for the VM.",
                        "properties": {
                            "enabled": {
                                "type": "boolean"
                            },
                            "rules": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "enum": [
                                                "in",
                                                "out"
                                            ]
                                        },
                                        "action": {
                                            "type": "string",
                                            "enum": [
                                                "ACCEPT",
                                                "DROP",
                                                "REJECT"
                                            ]
                                        },
                                        "source": {
                                            "type": "string"
                                        },
                                        "dest": {
                                            "type": "string"
                                        },
                                        "proto": {
                                            "type": "string",
                                            "enum": [
                                                "tcp",
                                                "udp"
                                            ]
                                        },
                                        "port": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "type",
                                        "action"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "enabled"
                        ]
                    },
                    "network_config": {
                        "type": "object",
                        "properties": {
                            "ip": {
                                "type": "string"
                            },
                            "gw": {
                                "type": "string"
                            },
                            "nameserver": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "ip"
                        ]
                    },
                    "user_config": {
                        "type": "object",
                        "properties": {
                            "username": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "username"
                        ]
                    }
                },
                "required": [
                    "vmid",
                    "name"
                ]
            }
        }
    },
    "required": [
        "vm_defaults",
        "vms"
    ]
}
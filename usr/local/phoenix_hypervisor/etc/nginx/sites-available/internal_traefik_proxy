# Internal Traefik Proxy
server {
    listen 443 ssl http2;
    server_name *.internal.thinkheads.ai;

    ssl_certificate /etc/nginx/ssl/internal_traefik_proxy.crt; # Server certificate for Nginx
    ssl_certificate_key /etc/nginx/ssl/internal_traefik_proxy.key; # Private key for Nginx
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256';
    ssl_prefer_server_ciphers off;

    # Proxy all requests to the Traefik LXC
    location / {
        proxy_pass https://10.0.0.12:443; # IP of Traefik LXC
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_ssl_verify off; # Traefik will handle the actual certificate validation
    }
}
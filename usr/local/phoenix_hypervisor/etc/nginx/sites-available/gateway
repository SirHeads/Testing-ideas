# Server block for redirecting HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name portainer.phoenix.local;

    # Fix: remove spaces around include path
    include /etc/nginx/snippets/acme_challenge.conf;

    location / {
        return 301 https://$host$request_uri;
    }
}

# Server block for HTTPS Portainer access
server {
    # Fix: `default_server` cannot be on a TLS listener for a named server
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name portainer.phoenix.local;

    # Fix: remove spaces around certificate paths
    ssl_certificate /etc/nginx/ssl/internal_traefik_proxy.crt;
    ssl_certificate_key /etc/nginx/ssl/internal_traefik_proxy.key;

    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_prefer_server_ciphers on;

    # Fix: remove spaces in log file paths
    access_log /var/log/nginx/portainer_access.log;
    error_log /var/log/nginx/portainer_error.log;

    location / {
        proxy_set_header Host $host;
        # Fix: remove spaces inside header names
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_pass https://10.0.0.12:443;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;

        proxy_cache api_cache;
        proxy_cache_valid 200 302 10m;
        proxy_cache_valid 404 1m;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

# Server block for the agent
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name agent.agent.phoenix.local;

    # Fix: remove spaces around certificate paths
    ssl_certificate /etc/nginx/ssl/internal_traefik_proxy.crt;
    ssl_certificate_key /etc/nginx/ssl/internal_traefik_proxy.key;

    location / {
        proxy_pass https://10.0.0.12:443;
    }
}

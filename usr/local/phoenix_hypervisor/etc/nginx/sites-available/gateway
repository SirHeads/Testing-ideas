# Server block for redirecting HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name *.phoenix.thinkheads.ai;

    # Location block for ACME challenges
    location /.well-known/acme-challenge/ {
        proxy_pass http://10.0.0.12:80; # Forward to Traefik's HTTP entrypoint
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# Map block to dynamically route to the correct upstream service
map $host $upstream_service {
    default https://traefik.internal.thinkheads.ai:443;
}

# Server block for HTTPS traffic
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name *.phoenix.thinkheads.ai;

    # --- BEGIN DYNAMIC AUTHENTICATION ---
    # Import the NJS module for file reading
    js_import /etc/nginx/scripts/http.js;
    # Read the Portainer JWT into a variable
    js_set $portainer_jwt http.get_portainer_jwt;
    # --- END DYNAMIC AUTHENTICATION ---

    # Define the resolver to use our host-based DNS
    resolver 10.0.0.13 valid=10s;

    # SSL Configuration
    # Use the internal wildcard cert as a default to ensure Nginx can start.
    ssl_certificate /etc/nginx/ssl/internal_traefik_proxy.crt;
    ssl_certificate_key /etc/nginx/ssl/internal_traefik_proxy.key;

    # The Portainer certificate is now managed by the portainer-manager.sh script
    # and will be included if it exists, overriding the default for the portainer server name.
    include /ssl/portainer.*.conf;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # Location block for ACME challenges
    location /.well-known/acme-challenge/ {
        proxy_pass http://10.0.0.12:80; # Forward to Traefik's HTTP entrypoint
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # --- BEGIN DYNAMIC AUTHENTICATION ---
        # Add the Authorization header if the token exists
        if ($portainer_jwt) {
            proxy_set_header Authorization "Bearer $portainer_jwt";
        }
        # --- END DYNAMIC AUTHENTICATION ---

        proxy_ssl_server_name on;
        proxy_ssl_trusted_certificate /ssl/phoenix_ca.crt; # Trust our internal CA

        # Forward all traffic to the Traefik internal proxy
        proxy_pass $upstream_service;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }
}
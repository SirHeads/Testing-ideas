# Server block for redirecting HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # This server block will catch all traffic for the domain and forward it
    # to the Traefik internal service mesh.
    server_name *.phoenix.thinkheads.ai;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Forward all traffic to the Traefik internal proxy
        proxy_pass https://10.0.0.12:443;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }
}

# Server block for HTTPS traffic
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name *.phoenix.thinkheads.ai;

    # SSL Configuration
    ssl_certificate /ssl/portainer.phoenix.thinkheads.ai.crt;
    ssl_certificate_key /ssl/portainer.phoenix.thinkheads.ai.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Forward all traffic to the Traefik internal proxy
        proxy_pass https://10.0.0.12:443;

        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }
}
# HTTP to HTTPS redirect
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    return 301 https://$host$request_uri;
}

# Portainer Proxy
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name portainer.phoenix.local;

    # SSL configuration
    ssl_certificate /etc/nginx/ssl/internal_traefik_proxy.crt;
    ssl_certificate_key /etc/nginx/ssl/internal_traefik_proxy.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # Proxy settings for Portainer
    location / {
        proxy_pass https://10.0.0.12:443;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support for Portainer
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeout settings for long-running connections
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }

    # Logging for debugging
    error_log /var/log/nginx/portainer_error.log;
    access_log /var/log/nginx/portainer_access.log;
}

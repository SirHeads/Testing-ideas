# HTTP → HTTPS redirect
server {
    listen 80;
    server_name ~^.*\.internal\.thinkheads\.ai$;
    return 301 https://$host$request_uri;
}

# All internal domains → Traefik mesh (mTLS)
server {
    listen 443 ssl http2;
    server_name ~^.*\.internal\.thinkheads\.ai$;

    ssl_certificate     /etc/nginx/ssl/nginx.internal.thinkheads.ai.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.internal.thinkheads.ai.key;

    location / {
        proxy_pass https://10.0.0.12:8443;   # Traefik mesh entrypoint

        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}